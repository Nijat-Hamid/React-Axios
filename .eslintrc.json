{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
      },
      "plugins": [
        "react",
        "react-hooks",
        "jsx-a11y"
    ],
      "settings": {
        "react": {
          "version": "detect"
        }
      },
      "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended"
      ],
      "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
      },
      "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 2022,
        "sourceType": "module"
      }
}